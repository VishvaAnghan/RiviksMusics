@model IEnumerable<RiviksMusics.Models.Music>

@{
    ViewData["Title"] = "Music";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Music</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="album">
    <thead>
        <tr style="background-color:lightpink">
            <th>
                @Html.DisplayNameFor(model => model.SongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album.AlbumName)
            </th>
            <th>
               Artist Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDate)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.UploadImage) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadSong)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)

                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.UploadImage)  *@
                    @if (!string.IsNullOrWhiteSpace(item.UploadImage))
                    {
                        <img src="~/img/@item.UploadImage" class="profile-user-img img-fluid img-square" alt="Image" width="50px" height="50px" />
                    }
            </td>
            <td>
                    @if (!string.IsNullOrWhiteSpace(item.UploadImage))
                    {
                        <audio controls>
                            <source src="~/audio/@item.UploadSong" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    }
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.MusicId"><i class="fas fa-edit"></i></a>
                    <button class="btn btn-danger" onclick="confirmFunction ('@item.MusicId')"><i class="fas fa-trash"></i></button>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        function confirmFunction(MusicId) {
            if (confirm('Are you sure you want to delete this item') == true) {
                deleteMusic(MusicId)
            }
        }
        function deleteMusic(MusicId) {
            $.ajax({
                url: "@Url.Action("DeleteMusic", "Music")",
                datatype: "json",
                data: { MusicId: MusicId },
                success: function (resp) {
                    if (resp.status) {
                        location.reload();
                    }
                    else {
                        alert("Music is not deleted");
                    }
                },
                error: function (resp) {
                    console.log("Delete Music error:", resp);
                }
            });
        }
    </script>
}
@section album {
    <script src="~/js/album.js"></script>
}
