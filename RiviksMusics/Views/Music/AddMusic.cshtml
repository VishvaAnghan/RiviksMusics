@model RiviksMusics.Models.Music

@{
    ViewData["Title"] = "AddMusic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Music</h1>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddMusic" method="Post" class="row g-2" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group col-md-6">
                <label asp-for="SongName" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label>Select Type</label><span class="text-danger">*</span>
                <div>
                    @*  <label>
                    <input type="radio" name="SelectType" value="Album" id="radioAlbum" checked /> Album
                    </label> *@
                    <div class="form-check ">
                        <input asp-for="SelectType " class="form-check-input" type="radio" value="Album" id="radioAlbum" checked>
                        <label asp-for="SelectType" class="form-check-label">
                            Album
                        </label>
                    </div>
                    <div class="form-check">
                        <input asp-for="SelectType" class="form-check-input" type="radio" value="Person" id="radioPerson">
                        <label asp-for="SelectType" class="form-check-label">
                            Person
                        </label>
                    </div>


                </div>
                @* <span asp-validation-for="AlbumId" class="text-danger"></span>  *@
            </div>


            <div class="form-group col-md-4">
                <label asp-for="CategoryId" class="control-label"></label>
                @* <span class="text-danger">*</span> *@
                <select asp-for="CategoryId" class="form-control selectCategory" id="categoryId">
                    <option> Select CategoryId</option>
                </select>
                @* <span asp-validation-for="CategoryId" class="text-danger"></span> *@
            </div>

            <div class="form-group col-md-4">
                <label asp-for="AlbumId" class="control-label"></label>
                @* <span class="text-danger">*</span> *@
                <select asp-for="AlbumId" class="form-control selectAlbum" >
                    <option> Select AlbumId</option>
                </select>
                @* <span asp-validation-for="AlbumId" class="text-danger"></span> *@
            </div>

            <div class="form-group col-md-4">
                <label asp-for="ArtistId" class="control-label"></label>
                <span class="text-danger">*</span>
                @*  <input asp-for="ArtistId" class="form-control" /> *@
                <select asp-for="ArtistId" class="form-control selectArtist">
                    <option> Select ArtistId</option>
                </select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UploadDate" class="control-label"></label>
                <input asp-for="UploadDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" Max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UploadImage" class="control-label"></label>
                <span class="text-danger">*</span>
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="UploadImage" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UploadSong" class="control-label"></label>
                <span class="text-danger">*</span>
                <input name="AudioFile" id="AudioFile" type="file" class="form-control" accept="audio/*" />
                <span asp-validation-for="UploadSong" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            function getCategoryRole() {
                $.ajax({
                    url: "@Url.Action("CategoryRole", "Music")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectCategory = $("#categoryId")
                        selectCategory.empty();
                        selectCategory.append('<option>--selectCategory--</option>');

                        var mySelect = $('.selectCategory');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.categoryId).html(item.categoryName)
                            );
                        });
                    },
                    error: function () {
                        alert('Failed to retrieve Category.');
                    }
                });
            }

            getCategoryRole();
        })
    </script>

    <script>
        $(document).ready(function () {
            function getAlbumRole() {
                $.ajax({
                    url: "@Url.Action("AlbumRole", "Music")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectAlbum = $("#AlbumId")
                        selectAlbum.empty();
                        selectAlbum.append('<option>--selectAlbum--</option>');

                        var mySelect = $('.selectAlbum');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.albumId).html(item.albumName)
                            );
                        });
                    },
                    error: function () {
                        alert('Failed to retrieve Album.');
                    }
                });
            }

            getAlbumRole();
        })
    </script>

    <script>
        $(document).ready(function () {
            function getArtist() {

                $.ajax({

                    url: "@Url.Action("ArtistRole", "Music")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectArtist = $("#ArtistId")
                        selectArtist.empty();
                        selectArtist.append();

                        var mySelect = $('.selectArtist');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.id).html(item.fullName)
                            );
                        });
                    },
                    error: function () {
                        alert('Failed to retrieve Artist');
                    }
                });
            }

            getArtist();
        })
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            function toggleAlbumIdField() {
                if ($('#radioPerson').is(':checked')) {
                    $('#AlbumId').prop('disabled', true);
                } else {
                    $('#AlbumId').prop('disabled', false);
                }
            }

            toggleAlbumIdField();

            $('input[name="SelectType"]').change(function () {
                toggleAlbumIdField();
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            function toggleCategoryIdField() {
                if ($('#radioAlbum').is(':checked')) {
                    $('#categoryId').prop('disabled', true);
                } else {
                    $('#categoryId').prop('disabled', false);
                }
            }

            toggleCategoryIdField();

            $('input[name="SelectType"]').change(function () {
                toggleCategoryIdField();
            });
        });
    </script>
}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

