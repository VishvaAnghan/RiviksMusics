@using RiviksMusics.Helper
@model RiviksMusics.Models.IndexViewModel
@* @using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager *@

@{
    ViewData["Title"] = "Welcome to ";
    Layout = "~/Views/Shared/_MusicLayout.cshtml";
    //var fullName = @UserManager.GetUserAsync(User).Result.FirstName + " " + @UserManager.GetUserAsync(User).Result.LastName;
}

<!-- ##### Hero Area Start ##### -->
<section class="hero-area">
    <div class="hero-slides owl-carousel">
        <!-- Single Hero Slide -->
        <div class="single-hero-slide d-flex align-items-center justify-content-center">
            <!-- Slide Img -->
            <div class="slide-img bg-img" style="background-image: url(./FrontEnd/img/bg-img/bg-1.jpg);"></div>
            <!-- Slide Content -->
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="hero-slides-content text-center">
                            <h2 data-animation="fadeInUp" data-delay="300ms">Riviks Music <span>Riviks Music</span></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Single Hero Slide -->
        <div class="single-hero-slide d-flex align-items-center justify-content-center">
            <!-- Slide Img -->
            <div class="slide-img bg-img" style="background-image: url(./FrontEnd/img/bg-img/bg-2.jpg);"></div>
            <!-- Slide Content -->
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="hero-slides-content text-center">
                            @* <h6 data-animation="fadeInUp" data-delay="100ms">Latest album</h6> *@
                            <h2 data-animation="fadeInUp" data-delay="300ms">Riviks Music <span>Riviks Music</span></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="latest-albums-area section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading style-2">
                    <p>See what’s new</p>
                    <h2>Latest Albums</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-9">
                <div class="ablums-text text-center mb-70">
                    <p>Check out the latest album on <b>RiviksMusics</b>! This release features a unique blend of genres, showcasing the artist's versatility and creativity. With captivating lyrics and mesmerizing melodies, it's a must-listen for music lovers. Discover standout tracks and immerse yourself in a sonic journey like no other. Visit <b>RiviksMusics</b> now for more details and to stream the full album!</p>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-12">
                <div class="albums-slideshow owl-carousel">


                    @foreach (var item in Model.LatestAlbums)
                    {
                        <div class="single-album">
                            <img src="~/img/@item.AlbumImage" alt="" style="width:500px; height:300px; object-fit:cover;">
                            <div class="album-info">

                                <h5>@item.AlbumName</h5>

                                @* <p>@fullname</p> *@
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</section>

<section class="oneMusic-buy-now-area has-fluid bg-gray section-padding-100">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="section-heading style-2">
                    <p>See what’s new</p>
                    <h2>Buy What’s New</h2>
                </div>
            </div>
        </div>

        <div class="row">

            @foreach (var item in Model.LatestAlbums)
            {
                <!-- Single Album Area -->
                <div class="col-12 col-sm-6 col-md-4 col-lg-2">


                    <div class="single-album-area wow fadeInUp" data-wow-delay="100ms">

                        <div class="album-thumb">
                            <a asp-controller="Home" asp-action="AlbumDetails" asp-route-Sku="@item?.Sku">
                                <img src="~/img/@item?.AlbumImage" alt="" style="width:500px; height:300px; object-fit:cover;">
                            </a>

                            <div class="album-info">
                                <h5 style="text-align:center;">@item?.AlbumName</h5>
                            </div>

                        </div>


                    </div>

                </div>
            }


        </div>


        <div class="row">
            <div class="col-12">
                <div class="load-more-btn text-center wow fadeInUp" data-wow-delay="300ms">
                    <a asp-action="Albums" class="btn oneMusic-btn">Load More <i class="fa fa-angle-double-right"></i></a>
                </div>
            </div>
        </div>
    </div>


</section>


<section class="featured-artist-area section-padding-100 bg-img bg-overlay bg-fixed" style="background-image: url(./FrontEnd/img/bg-img/bg-4.jpg);">
    <div class="container">
        <div class="row align-items-end">
            @if (Model.LatestSong != null)
            {
                <div class="col-12 col-md-5 col-lg-4">
                    <div class="featured-artist-thumb">
                        <img src="~/img/@Model?.LatestSong?.UploadImage" alt="" style="object-fit:cover; width:300px; height:300px;">
                    </div>
                </div>
                <div class="col-12 col-md-7 col-lg-8">
                    <div class="featured-artist-content">

                        <div class="section-heading white text-left mb-30">
                            <p>See what’s new</p>
                            <h2>@Model?.LatestSong.SongName  </h2>
                        </div>

                        <div class="song-play-area">
                            <div class="song-name">
                                <p>@Model?.LatestSong.SongName - <span style="color:#5f5f5f;">&nbsp; @FileSizeHelper.FormatBytes(Model?.LatestSong.AudioSize ?? 0)</span> </p>
                            </div>
                            <audio controls>
                                <source src="~/audio/@Model?.LatestSong.UploadSong">
                            </audio>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</section>
<!-- ##### Featured Artist Area End ##### -->
<!-- ##### Miscellaneous Area Start ##### -->
<section class="miscellaneous-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <!-- ***** Weeks Top ***** -->
            <div class="col-12 col-lg-4">
                <div class="weeks-top-area mb-100">
                    <div class="section-heading text-left mb-50 wow fadeInUp" data-wow-delay="50ms">
                        <p>See what’s new</p>
                        <h2>Top Albums </h2>
                    </div>

                    <!-- Single Top Item -->
                    @foreach (var item in Model.AlbumSong)
                    {
                        <div class="single-top-item d-flex wow fadeInUp" data-wow-delay="100ms">
                            <div class="thumbnail">
                                <a asp-controller="Home" asp-action="AlbumDetails" asp-route-Sku="@item?.Sku">
                                    <img src="~/img/@item?.AlbumImage" alt="" style="object-fit:cover; width:75px; height:75px;">
                                </a>
                            </div>
                            <div class="content-">
                                <h6>@item?.AlbumName</h6>
                                <p>@item?.Category?.CategoryName</p>
                            </div>
                        </div>

                    }


                </div>
            </div>

            <!-- ***** New Hits Songs ***** -->

            <div class="col-12 col-lg-4">
                <div class="new-hits-area mb-100">
                    <div class="section-heading text-left mb-50 wow fadeInUp" data-wow-delay="50ms">
                        <p>See what’s new</p>
                        <h2>New Hits</h2>
                    </div>
                    @foreach (var item in Model.LatestSongs)
                    {
                        <!-- Single Top Item -->
                        <div class="single-new-item d-flex align-items-center justify-content-between wow fadeInUp" data-wow-delay="100ms">
                            <div class="first-part d-flex align-items-center">
                                <div class="thumbnail">
                                    <img src="~/img/@item?.UploadImage" alt="" style="object-fit:cover; width:75px; height:75px;">
                                </div>
                                <div class="content-">
                                    <h6>@item?.SongName</h6>

                                </div>
                            </div>
                            <audio preload="auto" controls>
                                <source src="~/audio/@item?.UploadSong">
                            </audio>
                        </div>
                    }

                </div>
            </div>

            <!-- ***** Popular Artists ***** -->
            <div class="col-12 col-lg-4">
                <div class="new-hits-area mb-100">
                    <div class="section-heading text-left mb-50 wow fadeInUp" data-wow-delay="50ms">
                        <p>See what’s new</p>
                        <h2>Top Musics</h2>
                    </div>

                    <!-- Single Artist -->
                    @foreach (var item in Model.Displaymusic)
                    {
                        <div class="single-new-item d-flex align-items-center justify-content-between wow fadeInUp" data-wow-delay="100ms">
                            <div class="first-part d-flex align-items-center">
                                <div class="thumbnail">
                                    <a asp-controller="Home" asp-action="SingerDetails" asp-route-id="@item?.Sku">
                                        <img src="~/img/@item?.UploadImage" alt="" style="object-fit:cover; width:75px; height:75px;">
                                    </a>
                                </div>
                                <div class="content-">
                                    <h6>@item?.artistName</h6>

                                </div>
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Miscellaneous Area End ##### -->
<!-- ##### Contact Area Start ##### -->
<section class="contact-area section-padding-100 bg-img bg-overlay bg-fixed has-bg-img" style="background-image: url(./FrontEnd/img/bg-img/bg-2.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading white wow fadeInUp" data-wow-delay="100ms">
                    <p>See what’s new</p>
                    <h2>Get In Touch</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <!-- Contact Form Area -->
                <div class="contact-form-area">
                    <form action="https://formspree.io/f/mknddada" method="post">
                        <div class="row">
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group wow fadeInUp" data-wow-delay="100ms">
                                    <input type="text" class="form-control" id="name" placeholder="Name">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group wow fadeInUp" data-wow-delay="200ms">
                                    <input type="email" class="form-control" id="email" placeholder="E-mail">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group wow fadeInUp" data-wow-delay="300ms">
                                    <input type="text" class="form-control" id="subject" placeholder="Subject">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group wow fadeInUp" data-wow-delay="400ms">
                                    <textarea name="message" class="form-control" id="message" cols="30" rows="10" placeholder="Message"></textarea>
                                </div>
                            </div>
                            <div class="col-12 text-center wow fadeInUp" data-wow-delay="500ms">
                                <button class="btn oneMusic-btn mt-30" type="submit" fdprocessedid="9y4oa">Send <i class="fa fa-angle-double-right"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}