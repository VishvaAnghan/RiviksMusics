@model RiviksMusics.Models.MusicAlbumViewModel
@using RiviksMusics.Helper
@{
    ViewData["Title"] = "Album Details";
    Layout = "~/Views/Shared/_MusicLayout.cshtml";
}

<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(../../FrontEnd/img/bg-img/breadcumb3.jpg);"></section>



<div class="container-fluid row" style="margin-block:auto; display:flex; flex-wrap: wrap; ">


    <div class="container">

        <div class="row" style="padding: 50px 0px;">
            <div class="col-md-7">
                <img src="~/img/@Model?.AlbumImage" width="90%" class="profile-user-img img-fluid img-Squre" style="vertical-align: middle; overflow-clip-margin: content-box; overflow: clip; object-fit:cover;" />
            </div>

            <div class="col-md-5">
                <table class="table" style="border-style:hidden;">
                    <tbody>
                        <tr>
                            <td>
                                <h4>Album Name</h4>
                            </td>
                            <td>
                                <h4>@Model?.AlbumName</h4>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <h4>Category </h4>
                            </td>
                            <td>
                                <h4>@Model?.Category?.CategoryName</h4>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>Artist</h4>
                            </td>
                            <td>
                                <h4>@Model?.User?.FirstName  @Model?.User?.LastName</h4>
                            </td>

                            @if (Model.Status && !ViewBag.HasSubscription)
                            {
                    <dt class="col-sm-2">Status</dt>
                    <dd class="col-sm-10">
                        <span class="text-danger">Locked 🔒</span>
                    </dd>
                            }
                </tr>
                        @if (Model.Status && !ViewBag.HasSubscription)
                        {
                    <tr>
                        <td colspan="2">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                <a asp-action="Plans" asp-controller="Home" class="btn btn-danger">SUBSCRIBE</a>
                                    }
                                    else
                                    {
                                <a asp-action="Index" asp-controller="Dashboard" class="btn btn-danger">
                                    SUBSCRIBE
                                </a>
                                    }
                        </td>
                    </tr>
                        }
                </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h2 class=" listen ">
                    Listen Song
                </h2>
            </div>
            <div class="row">
                @if (Model != null && Model.Songs != null && Model.Songs.Count > 0)
                {
                    foreach (var item in Model.Songs)
                    {
                        <div class="col-12">
                            <div class="single-song-area mb-30 d-flex flex-wrap align-items-end">
                                <div class="song-thumbnail">
                                    <img src="~/img/@item?.UploadImage" id="image" alt="" style="width:120px; height:120px; object-fit:cover; image-orientation:from-image;">
                                </div>
                                <div class="song-play-area" style="flex:0 0 calc(100% - 400px);">
                                    <div class="song-name">
                                        <p>
                                            @item?.SongName - <span style="color: #5f5f5f;">&nbsp;@item?.User?.FirstName @item?.User?.LastName</span> - <span style="color: #5f5f5f;">&nbsp; @FileSizeHelper.FormatBytes(item?.AudioSize ?? 0)</span>
                                            @if (Model.Status && !ViewBag.HasSubscription)
                                            {
                                                <span class="text-danger">Locked 🔒</span>
                                            }
                                            else
                                            {
                                                @* <span class="text-success">Unlocked 🔓</span> *@
                                            }
                                        </p>
                                    </div>

                                    @if (Model.Status && !ViewBag.HasSubscription)
                                    {
                                        <p style="color: #999;"></p>
                                    }
                                    else
                                    {
                                        <audio controls>
                                            <source src="~/audio/@item?.UploadSong" type="audio/mpeg">
                                            Your browser does not support the audio element.
                                        </audio>
                                    }
                                </div>

                                <div class="d-flex align-items-center pl-2" style="height: 100px;">
                                    @if (Model.Status && !ViewBag.HasSubscription)
                                    {
                                        <p style="color: #999;"></p>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("DownloadFile", "Home" , new {id = item?.MusicId})" style="background-color:#262626; border-radius: 50px;  padding: 10px; width: 110%; text-align: center; transition: .5s; margin-bottom: 50%; text-size-adjust:auto;" data-toggle="tooltip" title="Download">
                                            <i class="fa fa-download" style="color:white"> &nbsp;&nbsp; @FileSizeHelper.ToShorthand(item?.DownloadSong ?? 0) </i>
                                        </a>
                                    }
                                </div>

                                <div class="d-flex align-items-center pl-2" style="height: 100px;">
                                    <a style="background-color:#262626; border-radius: 50px;  padding: 10px; width: 110%; text-align: center; transition: .5s; margin-bottom: 50%; text-size-adjust:auto;" data-toggle="tooltip" title="Views">
                                        <i class="fa fa-eye" style="color:white"> &nbsp;&nbsp; @FileSizeHelper.ToShorthand(item?.ViewSong ?? 0) </i>
                                    </a>
                                </div>

                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
