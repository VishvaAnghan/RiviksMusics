@using Microsoft.AspNetCore.Identity
@model RiviksMusics.Models.Album

@{
    ViewData["Title"] = "EditAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit Album</h1>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditAlbum" method="post" class="row g-2" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumId" />
            <div class="form-group col-md-6">
                <label asp-for="Sku" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AlbumName" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ArtistId" class="control-label"></label><span class="text-danger">*</span>
                <select asp-for="ArtistId" class="form-control selectArtist"></select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CategoryId" class="control-label"></label> <span class="text-danger">*</span>
                <select asp-for="CategoryId" class="form-control selectCategory"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UploadDate" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="UploadDate" class="form-control" type="date" Max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AlbumImage" class="control-label"></label><span class="text-danger">*</span>
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="AlbumImage" class="text-danger"></span>

                @if (!string.IsNullOrWhiteSpace(Model.AlbumImage))
                {
                    <img src="~/img/@Model.AlbumImage" class="profile-user-img img-fluid " alt="Image" width="40px" />
                }

            </div>
            <div class="form-group col-md-6" id="cashless">
                <label>Status</label>
                <div class="form-check">
                    <input asp-for="Status" class="form-check-input" type="checkbox" id="cashlessCheckbox">
                    <span id="cashlessSymbol" style="font-size: 24px; margin-left:15px;"></span>
                </div>
            </div><br /><br /><br />
            <div class="form-group col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function getArtist() {
                $.ajax({
                    url: "@Url.Action("ArtistRole", "Album")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectArtist = $("#ArtistId")
                        selectArtist.empty();
                        selectArtist.append('<option>--selectArtist--</option>');

                        var mySelect = $('.selectArtist');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.id).html(item.fullName)
                            );
                        });
                        var selectArtistId = "@Model.ArtistId";
                        if (selectArtistId !== null && selectArtistId !== "") {
                            selectArtist.val(selectArtistId);
                        }
                    },
                    error: function () {
                        alert('Failed to retrieve Artist');
                    }
                });
            }

            getArtist();
        })
    </script>

    <script>
        $(document).ready(function () {
            function getCategoryRole() {
                $.ajax({
                    url: "@Url.Action("CategoryRole", "Album")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectCategory = $("#CategoryId")
                        selectCategory.empty();
                        selectCategory.append('<option>--selectCategory--</option>');

                        var mySelect = $('.selectCategory');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.categoryId).html(item.categoryName)
                            );
                        });
                        var selectCategoryId = "@Model.CategoryId";
                        if (selectCategoryId !== null && selectCategoryId !== "") {
                            selectCategory.val(selectCategoryId);
                        }
                    },
                    error: function () {
                        alert('Failed to retrieve Category');
                    }
                });
            }

            getCategoryRole();
        })
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cashlessCheckbox = document.getElementById("cashlessCheckbox");
            const cashlessSymbol = document.getElementById("cashlessSymbol");

            function updateCashlessSymbol() {
                if (cashlessCheckbox.checked) {
                    cashlessSymbol.textContent = "✅";
                } else {
                    cashlessSymbol.textContent = "❌";
                }
            }
            updateCashlessSymbol();
            cashlessCheckbox.addEventListener("change", updateCashlessSymbol);
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
