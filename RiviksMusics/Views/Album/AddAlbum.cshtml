@model RiviksMusics.Models.Album

@{
    ViewData["Title"] = "AddAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Album</h1>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAlbum" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AlbumName" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label><span class="text-danger">*</span>
                <select asp-for="ArtistId" class="form-control selectArtist">
                    <option> Select ArtistId</option>
                </select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label><span class="text-danger">*</span>
                <select asp-for="CategoryId" class="form-control selectCategory">
                    <option> Select CategoryId</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadDate" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="UploadDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" Max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumImage" class="control-label"></label><span class="text-danger">*</span>
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="AlbumImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            function getArtist() {
                $.ajax({
                    url: "@Url.Action("ArtistRole", "Album")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectArtist = $("#ArtistId")
                        selectArtist.empty();
                        selectArtist.append('<option>--selectArtist--</option>');

                        var mySelect = $('.selectArtist');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.id).html(item.fullName)
                            );
                        });
                    },
                    error: function () {
                        alert('Failed to retrieve Artist');
                    }
                });
            }

            getArtist();
        })
    </script>

    <script>
        $(document).ready(function () {
            function getCategoryRole() {
                $.ajax({
                    url: "@Url.Action("CategoryRole", "Album")",
                    type: "GET",
                    dataType: "Json",
                    success: function (result) {
                        let selectCategory = $("#CategoryId")
                        selectCategory.empty();
                        selectCategory.append('<option>--selectCategory--</option>');

                        var mySelect = $('.selectCategory');
                        $.each(result, function (idx, item) {

                            mySelect.append(
                                $('<option></option>').val(item.categoryId).html(item.categoryName)
                            );
                        });
                    },
                    error: function () {
                        alert('Failed to retrieve Category');
                    }
                });
            }

            getCategoryRole();
        })
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
