@model RiviksMusics.Models.Album

@{
    ViewData["Title"] = "AddAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddAlbum</h1>
<div>
    <a asp-action="Album" class="btn btn-primary">Back to List</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAlbum">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AlbumName" class="control-label"></label>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" class="form-control" asp-items="@(ViewBag.Artists as SelectList)">
                    @* <option> Select ArtistId</option> *@
                </select>
                
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@(ViewBag.Categories as SelectList)">
                   @*  <option> Select CategoryId</option> *@
                </select>
               
            </div>
            <div class="form-group">
                <label asp-for="UploadDate" class="control-label"></label>
                <input asp-for="UploadDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" Max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumImage" class="control-label"></label>
                <input asp-for="AlbumImage" type="file" class="form-control"  accept="image/*" />
                <span asp-validation-for="AlbumImage" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="AlbumUpload" class="control-label"></label>
                <input asp-for="AlbumUpload" type="file" class="form-control" />
                <span asp-validation-for="AlbumUpload" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <button type="submit" class="btn btn-primary" >Create</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
   @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
